<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
<div class="container">
<div class="row">
  <div class="col-lg-3">
   <%= render 'list', book: @book, user: @user %>
  </div>

    <div class="col lg 13" >
    <h1>Books</h1>

   <table class="table table-striped">
    <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opnion</th>
      </tr>
      </thead>
    <% @books.each do |book| %>
      
      <tbody>
      <tr>
       <td><%= image_tag book.user.get_profile_image(50,50) %></td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
      </tr>
      </tbody>
   <% end %>
  </table>
  </div>
</div>
</div>