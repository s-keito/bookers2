<div class="container">
<div class="row">
  <div class="col-lg-3">
   <%= render 'list', book: @book %>
  </div>
  
    <div class="col lg 13" >
    <h1>Books</h1>

   <table class="table table-striped">
    <% @books.each do |book| %>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opnion</th>
      </tr>

      <tr>
       <td><%= image_tag book.user.get_user_image %></td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
      </tr>

    </table>
   <% end %>
    
  </div>
</div>
</div>