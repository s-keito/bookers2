<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>


<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <% if @user.errors.any? %>
   <%= @user.errors.count %>errors prohibited this obj from being saved:
    <ul>
     <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
   </ul>
  <% end %>
<p>Name</p>
<%= f.text_field :name %>

<p>Image</p>
<%= f.file_field :profile_image, accept: "image/*" %>

<p>Introdaction</p>
<%= f.text_area :introduction %>
<br>
<%= f.submit 'Update User', class: "btn btn-secondary" %>

<% end %>
</div>
</div>
</div>
