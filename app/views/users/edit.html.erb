<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

<p>Name</p>
<%= f.text_field :name %>

<p>Image</p>
<%= f.file_field :profile_image, accept: "image/*" %>

<p>Introdaction</p>
<%= f.text_area :introduction %>
<br>
<%= f.submit 'Update User', class: "btn btn-secondary" %>

<% end %>
